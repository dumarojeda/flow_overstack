<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="forms-section panel">
      <h1>New Questions</h1>
      <%= form_for :question, url: questions_path do |f| %>
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title, class: 'form-control', placeholder: 'Write your question here...' %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Write your description here...' %>
        </div>
        <div class="form-group">
          <%= f.submit "Create", class: 'btn btn-custom' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

