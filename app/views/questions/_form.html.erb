<%= form_for(question) do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, class: 'form-control', placeholder: 'Write your question here...' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Write your description here...' %>
  </div>
  <div class="form-group">
    <%= f.submit "Create", class: 'btn btn-custom' %>
  </div>
<% end %>