<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="forms-section panel">
      <h2 class="title">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: 'form-control', placeholder: 'Write your name here...' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Write your email here...' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Write your password here...' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Write your password again.' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-custom' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
